<!--header start-->
  <header class="header">
      <!--top bar-->
      <div class="top-bar">
          <div class="container">
              <div class="row">
                  <div class="col-sm-6 hidden-xs">
                      <span>Bienvenue au paradis des chats</span>
                  </div>
                  <div class="col-sm-6 text-right">
                      <ul class="list-inline">
                          <% if user_signed_in? %>
                          <li class="hidden-xs"><a href="#" class="offers">Nouveau</a></li>
                          <li class="hidden-xs"><strong><%= current_user.username.capitalize %></strong></li>
                          <li class="hidden-xs"><%= link_to "Profil", edit_user_registration_path %></li>
                          <li class="hidden-xs"><%=link_to "Mon panier", cart_path(current_user.cart) %></li>
                          <li class="hidden-xs"><%= link_to content_tag(:i, nil, class: 'pe-7s-user') + " Deconnexion ", destroy_user_session_path, :method => :delete %></li>
                          <% else %>
                          <li class="hidden-xs"><a href="#" class="offers">Nouveau</a></li>
                          <li class="hidden-xs"><%= link_to content_tag(:i, nil, class: 'pe-7s-user') + " S'inscrire ", new_user_registration_path %></li>
                          <li><%= link_to content_tag(:i, nil, class: 'pe-7s-lock') + " Connexion ", new_user_session_path %></li>
                          <% end %>
                  </div>
              </div>
          </div>
      </div>
      <!--top bar end-->


      <!--main navigation start-->
      <!-- Static navbar -->
      <nav class="navbar navbar-default navbar-static-top yamm sticky">
          <div class="container">
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <%= link_to(image_tag("cat-logoo.png", :alt => "logo", :class => "navbar-brand", :width => 70), root_path ) %>
              </div>
              <div id="navbar" class="navbar-collapse collapse">
                  <ul class="nav navbar-nav">
                      <li class="active"><%= link_to "Accueil", root_path %></li>
                      <li class="dropdown">
                          <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown" role="button" aria-haspopup="true">Chatons <i class="fa fa-angle-down"></i></a>
                          <ul class="dropdown-menu">
                              <li><%=link_to "Photos de chats", products_path %></li>
                          </ul>
                      </li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">

                    <% if user_signed_in? %>
                      <li class="dropdown">
                          <a href="#" class="dropdown-toggle js-activated" data-toggle="dropdown" role="button" aria-haspopup="true"><i class="pe-7s-cart"></i> <span class="badge"></span></a>
                          <div class="dropdown-menu shopping-cart">
                                <% 	@cart = current_user.cart %>
                                <% @cart_products = @cart.products %>
                                <% @cart_products.each do |product| %>
                                  <div class="cart-items content-scroll">
                                    <div class="cart-item clearfix">
                                      <div class="description">
                                          <%= product.title %><strong class="price"><%= product.price %></strong>
                                      </div><!--Description-->
                                      <div class="buttons">
                                          <a href="/products/<%=product.id%>" class="fa fa-pencil"></a><%=link_to content_tag(:i,nil, class: "fa fa-trash-o"), removeproduct_path(product), method: :post %>
                                      </div>
                                      <% end %>
                                      </div><!--cart item-->
                                    </div><!--cart-items-->
                                  </div><!--footer of cart-->
                          </div><!--cart dropdown end-->
                        <% end %>
                      </li>
                  </ul>
              </div><!--/.nav-collapse -->
          </div><!--/.container-fluid -->
      </nav>
      <!--main navigation end-->
      <!--main navigation end-->
  </header>
  <!--header end-->
